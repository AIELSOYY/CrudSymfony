{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
            </tr>
        </thead>
        <tbody>
            {% for data in datas %}
                <tr>
                    <th scope="row">{{data.title}}</th>
                    <td>
                        {{data.content}}
                        <td class="text-right">
                            <a href="{{path('update', {'id': data.id})}}"<button type="button" class="btn btn-warning">Modifier</button></a>
                            <a href="{{path('delete', {'id': data.id})}}"<button type="button" class="btn btn-danger">Supprimer</button></a>
                        </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{path('create')}}"<button type="button" class="btn btn-success">Cr√©er</button></a>
        
{% endblock %}
